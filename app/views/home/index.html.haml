%div.post
  %h1.title
    = link_to "Mail-a-prof", "#"

  %div.entry
    - form_for @contact do |contact|
      %table{:id => "new_eb"}
        %tr
          %td
            %b Email
          %td
            = contact.text_field :email, :size => 25
  
        %tr
          %td
            %b Name of the prof
          %td
            = contact.text_field :name, :size => 25
        %tr
          %td
            %b Publication
          %td
            = contact.text_field :publication, :size => 25
      %br
      %br
      %br
      %br
      = contact.submit
           
 
        
